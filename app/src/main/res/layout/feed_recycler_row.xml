<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height = "wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/questionCard"
        cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="postdetails"
                android:textColor="#737373"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/postQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="postQuestion"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/postDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="postDesc"
                android:textColor="#666666"
                android:textSize="12dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#ccc" />

            <TextView
                android:id="@+id/answerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="answerDetails"
                android:textColor="#737373"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/posterPhoto"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/default_profile" />

                <Button
                    android:id="@+id/likeButton"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/feed_button_background"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:height="20dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/responseButton"
                    android:layout_marginTop="12dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/feed_button_background_selected"
                    android:textSize="10sp"
                    android:height="20dp"
                    android:textColor="#036a8b"
                    android:text="Button" />

                <ImageView
                    android:id="@+id/moreOptions"
                    android:layout_marginLeft="20dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="17dp"
                    app:srcCompat="@drawable/options" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>